<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/standard_icon_size"
                android:layout_height="@dimen/standard_icon_size"
                android:layout_margin="@dimen/small_125"
                android:padding="@dimen/small_125"
                android:visibility="invisible"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_bold"
                android:gravity="center_horizontal"
                android:text="@string/profile"
                android:textColor="@color/typography_2"
                android:textSize="@dimen/medium_size_text"
                app:layout_constraintBottom_toBottomOf="@id/btn_back"
                app:layout_constraintTop_toTopOf="@id/btn_back" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/small_100"
            android:padding="@dimen/small_100">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="47dp">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="@dimen/size_profile_image"
                    android:layout_height="@dimen/size_profile_image"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_ava"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_camera"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_100"
            android:fontFamily="@font/font_bold"
            android:gravity="center_horizontal"
            android:text="@string/axmet_dauletmuratov"
            android:textColor="@color/typography_4"
            android:textSize="@dimen/medium_size_text" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_125"
            android:src="@drawable/pic_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_100"
            android:layout_marginTop="@dimen/normal_100"
            android:fontFamily="@font/font_bold"
            android:text="@string/name"
            android:textColor="@color/typography_5" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_100"
            android:background="@color/white"
            android:layout_marginHorizontal="@dimen/normal_100"
            app:cardCornerRadius="@dimen/small_150"
            app:cardElevation="0dp"
            app:contentPadding="@dimen/normal_100"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/normal_100"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_bold"
                    android:maxLines="1"
                    android:text="@string/axmet_dauletmuratov"
                    android:textColor="@color/typography_2"
                    android:textSize="@dimen/normal_text_100"
                    tools:ignore="SpUsage" />

                <ImageView
                    android:layout_width="@dimen/normal_150"
                    android:layout_height="@dimen/normal_150"
                    android:src="@drawable/ic_edit"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_100"
            android:layout_marginTop="@dimen/normal_100"
            android:fontFamily="@font/font_bold"
            android:text="@string/phone_number"
            android:textColor="@color/typography_5" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_100"
            android:background="@color/white"
            android:layout_marginHorizontal="@dimen/normal_100"
            app:cardCornerRadius="@dimen/small_150"
            app:cardElevation="0dp"
            app:contentPadding="@dimen/normal_100"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/normal_100"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_bold"
                    android:maxLines="1"
                    android:text="+999913821929"
                    android:textColor="@color/typography_2"
                    android:textSize="@dimen/normal_text_100"
                    tools:ignore="SpUsage" />

                <ImageView
                    android:id="@+id/iv_edit_number"
                    android:layout_width="@dimen/normal_150"
                    android:layout_height="@dimen/normal_150"
                    android:src="@drawable/ic_edit"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_100"
            android:layout_marginTop="@dimen/normal_100"
            android:fontFamily="@font/font_bold"
            android:text="@string/password"
            android:textColor="@color/typography_5" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_100"
            android:background="@color/white"
            android:layout_marginHorizontal="@dimen/normal_100"
            app:cardCornerRadius="@dimen/small_150"
            app:cardElevation="0dp"
            app:contentPadding="@dimen/normal_100"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/normal_100"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_bold"
                    android:maxLines="1"
                    android:text="kubey123"
                    android:textColor="@color/typography_2"
                    android:textSize="@dimen/normal_text_100"
                    tools:ignore="SpUsage" />

                <ImageView
                    android:layout_width="@dimen/normal_150"
                    android:layout_height="@dimen/normal_150"
                    android:layout_marginEnd="@dimen/small_100"
                    android:src="@drawable/ic_password_close"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/iv_edit_password"
                    android:layout_width="@dimen/normal_150"
                    android:layout_height="@dimen/normal_150"
                    android:src="@drawable/ic_edit"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_100"
            android:layout_marginTop="@dimen/normal_100"
            android:fontFamily="@font/font_bold"
            android:text="@string/group"
            android:textColor="@color/typography_5" />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_100"
            android:background="@color/white"
            android:layout_marginHorizontal="@dimen/normal_100"
            app:cardCornerRadius="@dimen/small_150"
            app:cardElevation="0dp"
            app:contentPadding="@dimen/normal_100"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/normal_100"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_bold"
                    android:maxLines="1"
                    android:text="302"
                    android:textColor="@color/typography_2"
                    android:textSize="@dimen/normal_text_100"
                    tools:ignore="SpUsage" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loadingProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/brand_color"
            android:visibility="visible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>